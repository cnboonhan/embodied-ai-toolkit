{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Embodied AI Toolkit Configuration Schema",
    "description": "Schema for the embodied AI toolkit configuration file",
    "type": "object",
    "properties": {
        "project_name": {
            "type": "string",
            "description": "Name of the project for identification and logging purposes",
            "examples": ["example_config", "my_robot_project"]
        },
        "label": {
            "type": "string",
            "description": "Label for Data coming from this stream",
            "examples": ["example_label", "my_robot_label"]
        },
        "epsisode_name": {
            "type": "string",
            "description": "Name of the episode for identification and logging purposes",
            "examples": ["episode_1", "episode_2"]
        },
        "urdf_path": {
            "type": "string",
            "description": "Path to the URDF file or robot description name",
            "examples": ["g1_description", "/path/to/robot.urdf"]
        },
        "custom_joints": {
            "type": "array",
            "description": "Array of custom joint definitions",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the joint"
                    },
                    "type": {
                        "type": "string",
                        "description": "Type of the joint",
                        "enum": ["revolute"]
                    },
                    "limits": {
                        "type": "array",
                        "description": "Joint limits [lower_limit, upper_limit]",
                        "items": {
                            "type": "number"
                        },
                        "minItems": 2,
                        "maxItems": 2
                    }
                },
                "required": ["name", "type", "limits"],
                "additionalProperties": false
            }
        },
        "api_port": {
            "type": "integer",
            "description": "Port number for the API server",
            "minimum": 1,
            "maximum": 65535,
            "default": 5000
        },
        "urdf_viewer_port": {
            "type": "integer",
            "description": "Port number for the URDF viewer server",
            "minimum": 1,
            "maximum": 65535,
            "default": 8080
        },
        "data_viewer_port": {
            "type": "integer",
            "description": "Port number for the data viewer server",
            "minimum": 1,
            "maximum": 65535,
            "default": 9090
        },
        "data_grpc_port": {
            "type": "integer",
            "description": "Port number for the data gRPC server",
            "minimum": 1,
            "maximum": 65535,
            "default": 5001
        }
    },
    "required": ["project_name", "label", "epsisode_name", "urdf_path", "api_port", "urdf_viewer_port", "data_viewer_port", "data_grpc_port"],
    "additionalProperties": false
}
