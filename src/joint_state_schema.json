{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "joint_state_schema.json",
  "title": "Joint State Message Schema",
  "description": "Schema for joint state messages used in the get_joints API endpoint",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z][a-zA-Z0-9_]*$": {
      "type": "object",
      "description": "Joint information for a single joint",
      "properties": {
        "current_value": {
          "type": "number",
          "description": "Current position/value of the joint"
        },
        "limits": {
          "type": "array",
          "description": "Joint limits as [min, max]",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        }
      },
      "required": ["current_value", "limits"],
      "additionalProperties": false
    }
  },
  "minProperties": 1,
  "additionalProperties": false,
  "examples": [
    {
      "joint1": {
        "current_value": 1.5,
        "limits": [-3.14159, 3.14159]
      },
      "joint2": {
        "current_value": -0.8,
        "limits": [-1.57, 1.57]
      }
    }
  ]
}
